          "host": ["localhost"],
          "port": "8000",
          "path": ["payment", "stripe"],
          "query": [{"key": "amount", "value": "500"}]
        }
      }
    },
    {
      "name": "PayPal Payment",
      "request": {
        "method": "GET",
